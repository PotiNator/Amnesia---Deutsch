		[txtwin_info line="1" type="0" pos="7"]
		[voice_play no="64208" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Deshalb ist Nhil hierher gekommen ..."]
