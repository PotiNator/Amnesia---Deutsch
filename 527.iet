		[txtwin_info line="2" type="0" pos="7"]
		[voice_play no="64214" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Vier Tage später hätte Ukyo dich eigentlich treffen sollen,"]
