		[txtwin_info line="2" type="0" pos="7"]
		[voice_play no="64209" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Er hat seine letzten Kräfte dafür gegeben, die Zeit dieser Welt"]
		[maintxt_print text="     zurückzudrehen."]
		[batch]

		[voice_play no="64210" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
