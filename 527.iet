		[batch]
		
		[txtwin_info line="3" type="0" pos="7"]

		[voice_play no="64211" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Er konnte zwar die Zeit zurückdrehen, aber nicht die physische"]
