		[batch]

		[txtwin_info line="1" type="0" pos="4"]
		[voice_play no="64196" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Und mit der Zeit ist er dann verrückt geworden."]
		[batch]

		[txtwin_info line="3" type="0" pos="4"]
		[voice_play no="64197" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Ukyo kann nicht gleichzeitig mit dir in einer Welt existieren."]
		[maintxt_print text="     Ginge es nach dieser Logik ... sollte er dich zuerst eliminieren."]
		[batch]

		[txtwin_info line="2" type="0" pos="4"]
		[voice_play no="64198" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Im Versuch, vor seiner Angst vor dem Tod davonzulaufen, wurde"]
		[maintxt_print text="     ein anderer Ukyo erschaffen."]
		[batch]
		
		[txtwin_info line="1" type="0" pos="4"]

		[voice_play no="64199" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Und der Rest ist genauso, wie Ukyo es dir erzählt hat."]
