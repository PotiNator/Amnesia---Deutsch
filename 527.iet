		[txtwin_info line="2" type="0" pos="7"]
		
		[voice_play no="64212" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Wenn Nhil sich von Ukyo trennen könnte, könnte er bestimmt"]
