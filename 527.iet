		[voice_play no="64169" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Einmal, es war im August ..."]
		[batch]

		[txtwin_info line="3" type="0" pos="8"]
		[voice_play no="64170" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Da warst du Opfer einer Explosion am Universitätsgelände, und"]
		[maintxt_print text="     das war der Zeitpunkt, als du von der Liebe deines Lebens, Ukyo,"]
		[maintxt_print text="     getrennt wurdest."]
		[batch]

		[txtwin_info line="2" type="0" pos="8"]
		[voice_play no="64171" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Und die Person, die sich von Ukyos Trauer angezogen fühlte,"]
		[maintxt_print text="     war mein Meister, Nhil."]
		[batch]

		[txtwin_info line="2" type="0" pos="8"]	// karakuri-ism 海外版追加

		[voice_play no="64172" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Nhil ist ein Gott. Und seine Kräfte werden durch die"]
		[maintxt_print text="     Verwirklichung der Wünsche der Menschen ergänzt."]
		[batch]

		[txtwin_info line="2" type="0" pos="8"]	// karakuri-ism 海外版追加

		[voice_play no="64173" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Nhil war durch verschiedene Welten gereist und war dabei, seine"]
		[maintxt_print text="     Macht vollständig aufzubrauchen."]
		[batch]

		[voice_play no="64174" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Er suchte nach einer Person mit einem Wunsch, der stark genug"]
		[maintxt_print text="     war, um sie wieder zu regenerieren, und da hat er Ukyo getroffen."]
		[batch]
		
		[txtwin_info line="1" type="0" pos="8"]	// karakuri-ism 海外版追加

		[voice_play no="64175" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Ukyo wünschte sich von Nhil, dass du lebst."]
		[batch]

		[txtwaitset wait="30"]

		[txtwin_info line="2" type="0" pos="6"]
		[voice_play no="64176" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Aber ... selbst Nhil kann den Tod nicht rückgängig machen."]
		[maintxt_print text="     In dieser Welt warst du gestorben."]
		[batch]

		[voice_play no="64177" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Deshalb ... hat Nhil Ukyo mit sich genommen und sich dazu"]
		[maintxt_print text="     entschieden, nach einer Welt zu suchen, in der du noch lebst."]
		[batch]

		[voice_play no="64178" count="0"]
		[txtwin_info line="2" type="0" pos="6"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Und für diesen Zweck hat Nhil seinen Körper aufgegeben und sich"]
		[maintxt_print text="     mit Ukyo fusioniert."]
		[batch]

		[voice_play no="64179" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Daher denke ich, dass es auch nachvollziehbar war, dass ich mich"]
		[maintxt_print text="     zu dir angezogen fühle."]
		[batch]

		[txtwin_info line="2" type="0" pos="6"]
		[voice_play no="64180" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Ich mein, mein Schöpfer sucht nach dir. Natürlich werde ich"]
		[maintxt_print text="     davon angezogen."]
		[batch]

		[voice_play no="64181" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     ...Und so hat Nhil, der mit Ukyo eins wurde, nach einer Welt"]
		[maintxt_print text="     gesucht, in der du noch am Leben warst."]
		[batch]
		
		[txtwin_info line="3" type="0" pos="6"]

		[voice_play no="64182" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     ...Eigentlich hätte die Geschichte da enden sollen. Zu einer"]
		[maintxt_print text="     Zeit, als Ukyo dich in einer anderen Welt wieder getroffen"]
		[maintxt_print text="     hat ..."]
		[batch]

		[voice_play no="64183" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Wenn er sichergehen könnte, dass du den August überleben würdest,"]
		[maintxt_print text="     würde Ukyos Wünsch in Erfüllung gehen, und Nhil könnte sich"]
		[maintxt_print text="     wieder von ihm trennen."]
		[batch]

		[txtwin_info line="2" type="0" pos="1"]
		[voice_play no="64184" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Aber ... Ukyo ist immer, kurz nachdem er dich in einer Welt"]
		[maintxt_print text="     wieder getroffen hat, ums Leben gekommen."]
		[batch]

		[txtwin_info line="2" type="0" pos="1"]
		[voice_play no="64185" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Da Ukyo allerdings mit Nhil verschmolzen ist, ist er ein"]
		[maintxt_print text="     Halb-Unsterblicher."]
		[batch]

		[txtwin_info line="3" type="0" pos="1"]
		[voice_play no="64186" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Und dasselbe gilt auch für Nhil. Selbst wenn er versagen sollte,"]
		[maintxt_print text="     solange er Ukyos Wunsch nicht erfüllt, könnte er sich nicht von"]
		[maintxt_print text="     ihm trennen."]
		[batch]
		
		[txtwin_info line="2" type="0" pos="1"]

		[voice_play no="64187" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Daher blieb ihm nichts anderes übrig, als mit Ukyo zur nächsten"]
		[maintxt_print text="     Welt zu reisen, wo du noch am Leben warst."]
		[batch]

		[voice_play no="64188" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Aber selbst dort hat es Ukyo geschafft, auf brutale Art und"]
		[maintxt_print text="     Weise zu sterben. Und so ging die Reise immer weiter."]
		[batch]
		
		[txtwin_info line="1" type="0" pos="1"]

		[voice_play no="64189" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Immer und immer wieder ... Bis Nhil bemerkt hat ..."]
		[batch]
		
		[txtwin_info line="3" type="0" pos="1"]

		[voice_play no="64190" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Dass in jeder Welt eine starke Macht steckt, die alles daran"]
		[maintxt_print text="     setzt, alles zu vernichten, was nie existierte und nicht"]
		[maintxt_print text="     existieren sollte."]
		[batch]

		[txtwin_info line="2" type="0" pos="1"]
		[voice_play no="64191" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Aber auch als er es bemerkt hat, es war bereits zu spät."]
		[batch]

		[txtwin_info line="3" type="0" pos="1"]
		[voice_play no="64192" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Wenn Ukyo noch vor seinem Tod sichergehen könnte, dass du in"]
		[maintxt_print text="     Sicherheit bist, könnte sein Wunsch theoretisch in Erfüllung"]
		[maintxt_print text="     gehen, aber ..."]
		[batch]

		[txtwin_info line="2" type="0" pos="1"]
		[voice_play no="64193" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Aber das Universum lässt diesen Wunsch nicht einfach so in"]
		[maintxt_print text="     Erfüllung gehen."]
		[batch]

		[txtwin_info line="2" type="0" pos="1"]
		[voice_play no="64194" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     25. August. Das ist der Tag, an dem Ukyo und du immer wieder"]
		[maintxt_print text="     gestorben seid."]
		[batch]

		[txtwin_info line="2" type="0" pos="1"]
		[voice_play no="64195" count="0"]
		[speaker_set name="Orion" chrid="CHRID_ORION"]	// オリオン／オリオン
		[maintxt_print text="     Ukyo war der Einzige, der sich immer wieder an diese grausamen"]
